<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_flowerarchive"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.groupo.dublinfloristassociation.flowerarchive">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <Button
                android:id="@+id/tulipBtn"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text = "Tulip"
                android:textColor = "#FFFFFF"
                android:background= "#FFB6C1"
                android:layout_marginBottom="20dp"
                android:onClick="viewTulip"
                style="@style/roseButton"
                />

            <Button
                android:id="@+id/daffodilBtn"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text = "Daffodil"
                android:textColor = "#FFFFFF"
                android:background= "#FFDB00"
                android:layout_marginBottom="20dp"
                android:onClick="viewDaffodil"
                style="@style/roseButton"
                />

            <Button
                android:id="@+id/roseBtn"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text = "Rose"
                android:textColor = "#FFFFFF"
                android:background= "#8B0000"
                android:layout_marginBottom="20dp"
                style="@style/roseButton"
                />

            <Button
                android:id="@+id/bluebellBtn"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:text = "Bluebell"
                android:textColor = "#FFFFFF"
                android:background= "#7B68EE"
                android:layout_marginBottom="20dp"
                style="@style/roseButton"
                />



        </LinearLayout>
    </ScrollView>

</LinearLayout>
